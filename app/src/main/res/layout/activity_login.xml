<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intro_text"
        android:id="@+id/introText"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_alignEnd="@+id/email"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="email address"
        android:ems="10"
        android:id="@+id/email"
        android:layout_below="@+id/introText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="password"
        android:ems="10"
        android:id="@+id/pwd"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/loginRegister"
        android:onClick="login"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/pwd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New member?"
        android:id="@+id/registerLink"
        android:layout_alignStart="@+id/pwd"
        android:layout_below="@+id/loginRegister" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Here!"
        android:id="@+id/regHere"
        android:layout_alignBottom="@+id/registerLink"
        android:layout_alignEnd="@+id/pwd"
        android:layout_toEndOf="@+id/registerLink"
        android:layout_below="@+id/loginRegister"
        android:layout_marginLeft="10dp"/>

</RelativeLayout>
